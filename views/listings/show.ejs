<% layout("/layouts/boilerPlate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Listing Details :</h3>

      <!-- card -->
      <div class="card">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top show-card-img"
          style="height: 400px"
          alt="..."
        />
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b>
          </p>
          <br />
          <%=listing.description%><br />
          &#8377; <%=Number(listing.price).toLocaleString("en-IN")%> / Night<br />
          <%=listing.location%><br />
          <%=listing.country%><br />
        </div>
      </div>
      <!-- card end -->

      <div class="row justify-content-center mb-5">
        <div class="col-lg-2 col-md-2 mt-2">
          <form method="get" , action="/listings/<%=listing._id%>/edit">
            <button class="btn btn-secondary">Edit</button>
          </form>
        </div>

        <div class="col-lg-2 col-md-2 mt-2">
          <form
            method="post"
            action="/listings/<%=listing._id%>?_method=DELETE"
          >
            <button class="btn btn-secondary">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <hr />

    <div class="col-8 offset-2 mt-4 mb-5">
      <h4 class="mb-3">Leave a review</h4>
      <form method="post" action="/listings/<%=listing._id%>/review">
        <div>
          <label class="form-label" for="rating">Ratings : </label>
          <input
            type="range"
            class="form-control form-range"
            id="rating"
            name="review[rating]"
            min="1"
            max="5"
          />
        </div>

        <div>
          <label class="form-label mt-4" for="comment">Comment :</label>
          <textarea
            class="form-control"
            id="comment"
            cols="50"
            rows="3"
            name="review[comment]"
          ></textarea>
        </div>
        <button class="btn btn-outline-success mt-3">Submit</button>
      </form>
    </div>
  </div>
</body>
