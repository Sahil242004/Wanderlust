<% layout("/layouts/boilerPlate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>New Listing</h3>
      <form
        enctype="multipart/form-data"
        method="post"
        class="mt-3 needs-validation"
        action="/listings"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title :</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Enter Title"
            class="form-control"
            id="title"
            required
          />
          <div class="valid-feedback">Title Looks Good</div>
          <div class="invalid-feedback">
            Dont you think your property should have a good name
          </div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description :</label>
          <textarea
            name="listing[description]"
            placeholder="Enter Description"
            class="form-control"
            id="description"
            style="height: 100px"
            required
          ></textarea>
          <div class="valid-feedback">Description Looks Good</div>
          <div class="invalid-feedback">Tell something about your property</div>
        </div>

        <!-- <div class="mb-3">
          <label for="image" class="form-label">Image Link :</label>
          <input
            type="text"
            name="listing[image][url]"
            placeholder="Add Image Link/URL"
            class="form-control"
            id="image"
          />
        </div> -->

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image :</label>
          <input
            type="file"
            name="listing[image][url]"
            class="form-control"
            id="image"
            required
          />
        </div>

        <!-- -------------------------------------------- -->
        <div class="row">
          <div class="mb-3 col-lg-3">
            <label for="price" class="form-label">Price :</label>
            <input
              type="number"
              name="listing[price]"
              placeholder="Enter Price"
              class="form-control"
              id="price"
              required
            />
            <div class="valid-feedback">Price looks good</div>
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>

          <div class="mb-3 col-lg-9">
            <label for="location" class="form-label">Location :</label>
            <input
              type="text"
              name="listing[location]"
              placeholder="Enter Location"
              class="form-control"
              id="location"
              required
            />
            <div class="valid-feedback">Location Looks Good</div>
            <div class="invalid-feedback">Please enter valid Location</div>
          </div>
        </div>

        <!-- ------------------------------------------------ -->

        <div class="mb-5">
          <label for="country" class="form-label">Country :</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="Enter Country"
            class="form-control"
            id="country"
            required
          />
          <div class="valid-feedback">Country Looks Good</div>
          <div class="invalid-feedback">Please enter a valid Country</div>
        </div>

        <button class="btn btn-light mb-5">Create Listing</button>
      </form>
    </div>
  </div>
</body>
