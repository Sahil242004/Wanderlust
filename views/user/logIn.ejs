<% layout("/layouts/boilerPlate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Login on WanderLust</h3>
    <form
      action="/logIn"
      method="post"
      class="mt-3 needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username :</label>
        <input
          type="text"
          name="username"
          placeholder="Enter Username"
          class="form-control"
          id="username"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password :</label>
        <input
          type="password"
          name="password"
          placeholder="Enter Password"
          class="form-control"
          id="password"
          required
        />
      </div>
      <button class="mt-5 mb-5 btn btn-outline-success">LogIn</button>
    </form>
  </div>
</div>
